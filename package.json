{
	"name": "findr-6cs007-backend",
	"version": "0.0.1",
	"description": "backend for dissertation project",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "nodemon src/index.ts",
		"db:generate": "tsc -p tsconfig.json && drizzle-kit generate --config=drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
	},
	"author": "rv-bit",
	"license": "ISC",
	"dependencies": {
		"@auth/drizzle-adapter": "^1.7.4",
		"@auth/express": "^0.8.4",
		"axios": "^1.7.9",
		"better-auth": "^1.1.14",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.0.0",
		"joi": "^17.13.3",
		"mysql2": "^3.12.0",
		"nodemailer": "^6.9.16"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"concurrently": "^9.1.2",
		"drizzle-kit": "^0.30.2",
		"nodemon": "^3.1.9",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3"
	}
}
