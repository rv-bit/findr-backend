{
	"name": "findr-6cs007-backend",
	"version": "0.0.1",
	"description": "Backend for the Findr project",
	"author": "rv-bit",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist && echo 'Done.'",
		"build": "tsc && bun build --target=bun --outfile=dist/index.js ./src/index.ts",
		"dev": "bun --watch --hot src/index.ts",
		"start": "bun run dist/index.js",
		"db:generate": "tsc -p tsconfig.json && drizzle-kit generate --config=drizzle-dev.config.ts",
		"db:migrate": "drizzle-kit migrate --config=drizzle-dev.config.ts",
		"db:push": "drizzle-kit push --config=drizzle-dev.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle-dev.config.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
	},
	"dependencies": {
		"@auth/drizzle-adapter": "^1.7.4",
		"@auth/express": "^0.8.4",
		"axios": "^1.7.9",
		"better-auth": "^1.1.15",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.39.1",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.0.0",
		"joi": "^17.13.3",
		"mysql2": "^3.12.0",
		"nodemailer": "^6.10.0",
		"winston": "^3.17.0",
		"xss": "^1.0.15"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/nodemailer": "^6.4.17",
		"drizzle-kit": "^0.30.4",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.0"
	}
}
